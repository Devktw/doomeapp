<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="500dp">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="500dp"
		android:foreground="?android:attr/selectableItemBackground"
		android:layout_height="wrap_content">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="500dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:layout_height="wrap_content">
			<android.support.v7.widget.CardView
				xmlns:cardview="http://schemas.android.com/apk/res-auto"
				android:layout_width="160dp"
				android:layout_height="100dp"
				cardview:cardUseCompatPadding="true"	
				cardview:elevation="0dp"
				cardview:cardCornerRadius="5dp"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/ep_image"
					android:layout_width="160dp"
					android:layout_height="100dp"
					android:scaleType="centerCrop"/>
				<RelativeLayout android:layout_marginLeft="125dp"
					android:layout_width="wrap_content"
					android:id="@+id/premium"
					android:layout_height="20dp">
					<ImageView 
						android:background="@drawable/main_parkpremium"
						android:layout_width="50dp"
						android:gravity="center"
						android:layout_height="20dp"/>
					<ImageView android:tint="#FFFFFF"
						android:src="@drawable/diamond"
						android:layout_width="15dp"
						android:layout_centerHorizontal="true"
						android:layout_height="match_parent"/>
				</RelativeLayout> 
			</android.support.v7.widget.CardView>
			<LinearLayout android:layout_marginLeft="5dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/ep_name"
					android:layout_width="170dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="-"
					android:textSize="14sp" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
