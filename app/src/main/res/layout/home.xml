<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:background="?colorPrimary"
	android:layout_width="match_parent"
	android:layout_height="fill_parent">
	<RelativeLayout 
		android:paddingRight="5dp"
		android:paddingLeft="5dp"
		android:background="#1B1C21"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="50dp">
		<LinearLayout android:layout_centerInParent="true"
			android:layout_alignParentStart="true"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView android:src="@drawable/ic_home"
				android:layout_width="45dp"
				android:padding="6dp"
				android:layout_height="45dp"
				android:scaleType="fitXY"/>
			<LinearLayout android:layout_centerInParent="true"
				android:id="@+id/go_search"
				android:background="@drawable/frame_search"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginRight="5dp"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="35dp">
				<RelativeLayout 
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_width="wrap_content"
					android:layout_height="30dp">
					<TextView android:text="ค้นหาอนิเมะหรือมังงะ"
						android:id="@+id/searchtext"
						android:layout_centerInParent="true"
						android:textColor="#AAAAAA"
						android:ellipsize="end" 
						android:maxLines="1"
						android:layout_marginLeft="15dp"
						android:paddingRight="50dp"
						android:gravity="center_vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
					<RelativeLayout 
						android:layout_alignParentEnd="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<LinearLayout android:layout_marginRight="5dp"
							android:orientation="horizontal"
							android:gravity="center_vertical"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
							<View 
								android:background="@color/colorGray"
								android:layout_width="1dp" 
								android:layout_height="25dp"/> 
							<ImageView android:src="@drawable/ic_search"
								android:layout_width="30dp"
								android:tint="@android:color/white"
								android:padding="5dp"
								android:layout_height="30dp"
								android:scaleType="fitXY"/>
						</LinearLayout>
					</RelativeLayout>
				</RelativeLayout>
			</LinearLayout>
			<android.support.v7.widget.CardView
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:cardview="http://schemas.android.com/apk/res-auto"
				android:layout_alignParentEnd="true"

				android:layout_width="37dp"

				android:layout_centerInParent="true"
				android:layout_height="37dp"
				android:focusable="true"
				android:clickable="true"
				app:cardBackgroundColor="@android:color/transparent"
				app:cardElevation="0dp"
				cardview:cardCornerRadius="90dp">
				<LinearLayout 
					android:layout_centerInParent="true"
					android:layout_width="40dp"
					android:theme="@style/DarkTheme"
					android:foreground="?android:attr/selectableItemBackground"
					android:layout_height="40dp">
					<ImageView android:src="@drawable/favourite_icon"
						app:tint="#E44646"
						android:layout_width="37dp"
						android:padding="6dp"
						android:layout_height="37dp"
						android:scaleType="fitXY"/>
				</LinearLayout>
			</android.support.v7.widget.CardView>
		</LinearLayout>

	</RelativeLayout>
	<android.support.design.widget.TabLayout
		android:id="@+id/tab_layout"
		android:background="#1B1C21"
		app:tabIndicatorColor="?colorAccent" 
		app:tabSelectedTextColor="@color/coloraccent" 
		app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget" 
		app:tabTextColor="@color/colorGray"
		app:tabMinWidth="50dp"
		app:tabMode="scrollable" 
		android:textSize="20dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<android.support.v4.view.ViewPager 
		android:id="@+id/view_pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
</LinearLayout>

