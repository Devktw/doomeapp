<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<LinearLayout
		android:orientation="vertical"

		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:id="@+id/setting_main"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<LinearLayout 
				android:orientation="horizontal"

				android:gravity="center_vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout 
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="45.0dip" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<ImageView 
							android:layout_width="30.0dip"
							android:layout_height="30.0dip" 
							android:src="@drawable/brightness"
							android:layout_centerInParent="true"
							cardview:tint="@android:color/white" />
					</RelativeLayout>
				</android.support.v7.widget.CardView>
				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout android:layout_marginLeft="5dp"
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="wrap_content" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<TextView android:textSize="17dp"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:text="ปรับระดับแสง"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</RelativeLayout>
				</android.support.v7.widget.CardView>
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:gravity="center_vertical"
				android:layout_height="wrap_content">

				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout 
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="45.0dip" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<ImageView 
							android:layout_width="30.0dip"
							android:layout_height="30.0dip" 
							android:src="@drawable/screen_rotation"
							android:layout_centerInParent="true"
							cardview:tint="@android:color/white" />
					</RelativeLayout>
				</android.support.v7.widget.CardView>
				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout android:layout_marginLeft="5dp"
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="wrap_content" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<TextView android:textSize="17dp"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:text="การอ่านแนวตั้ง/นอน(หากรองรับ)"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</RelativeLayout>
				</android.support.v7.widget.CardView>
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout 
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="45.0dip" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<ImageView 
							android:layout_width="30.0dip"
							android:layout_height="30.0dip" 
							android:src="@drawable/scrollmanga"
							android:layout_centerInParent="true"
							cardview:tint="@android:color/white" />
					</RelativeLayout>
				</android.support.v7.widget.CardView>
				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout android:layout_marginLeft="5dp"
						android:theme="@style/WatchDark" 
						android:id="@+id/setting_autoscroll"
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="wrap_content" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<TextView android:textSize="17dp"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:gravity="center_vertical"
							android:text="การเลื่อนอัตโนมัติ"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</RelativeLayout>
				</android.support.v7.widget.CardView>
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:gravity="center_vertical"
				android:layout_height="wrap_content">

				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout 
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="45.0dip" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<ImageView 
							android:layout_width="30.0dip"
							android:layout_height="30.0dip" 
							android:src="@drawable/sendfile_icon"
							android:layout_centerInParent="true"
							cardview:tint="@android:color/white" />
					</RelativeLayout>
				</android.support.v7.widget.CardView>
				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout android:layout_marginLeft="5dp"
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="wrap_content" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<TextView android:textSize="17dp"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:text="การตั้งค่าอื่นๆ"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</RelativeLayout>
				</android.support.v7.widget.CardView>
			</LinearLayout>

			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:gravity="center_vertical"
				android:layout_height="wrap_content">

				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout 
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="45.0dip" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<ImageView 
							android:layout_width="30.0dip"
							android:layout_height="30.0dip" 
							android:src="@drawable/recomended_icon"
							android:layout_centerInParent="true"
							cardview:tint="@android:color/white" />
					</RelativeLayout>
				</android.support.v7.widget.CardView>
				<android.support.v7.widget.CardView 
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:cardview="http://schemas.android.com/apk/res-auto" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					cardview:cardBackgroundColor="@android:color/transparent"
					cardview:cardCornerRadius="5.0dip" 
					cardview:cardElevation="0.0dip">
					<RelativeLayout android:layout_marginLeft="5dp"
						android:theme="@style/WatchDark" 
						android:gravity="center"
						android:background="@drawable/cornor_toast" 
						android:layout_width="wrap_content" 
						android:layout_height="45.0dip" 
						android:layout_marginBottom="5.0dip" 
						android:foreground="?android:selectableItemBackground">
						<TextView android:textSize="17dp"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:text="ข้อเสนอแนะ"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</RelativeLayout>
				</android.support.v7.widget.CardView>

			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:id="@id/customtoast"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true">
			<android.support.v7.widget.CardView 
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:cardview="http://schemas.android.com/apk/res-auto" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				cardview:cardBackgroundColor="@android:color/transparent"
				cardview:cardCornerRadius="5.0dip" 
				cardview:cardElevation="0.0dip">
				<RelativeLayout  android:id="@+id/setting_manga"
					android:theme="@style/WatchDark" 
					android:gravity="center"
					android:background="@drawable/cornor_toast" 
					android:layout_width="45.0dip" 
					android:layout_height="45.0dip" 
					android:layout_marginRight="5.0dip" 
					android:foreground="?android:selectableItemBackground">
					<ImageView android:id="@+id/show_setting_manga"
						android:layout_width="30.0dip"
						android:layout_height="30.0dip" 
						android:src="@drawable/ic_setting"
						android:layout_centerInParent="true"
						cardview:tint="@android:color/white" />

					<ImageView android:id="@+id/hide_setting_manga"
						app:tint="?android:attr/textColorPrimary"
						android:visibility="gone"
						android:src="@drawable/left_icon_black"
						android:layout_width="30dp"
						android:rotation="-90"
						android:layout_height="30dp"/>
				</RelativeLayout>
			</android.support.v7.widget.CardView>
			<LinearLayout
				android:background="@drawable/cornor_toast"
				android:layout_width="wrap_content" 
				android:layout_height="45.0dip" 
				android:layout_marginRight="5.0dip">
				<TextView 
					android:textSize="16.0dip"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:id="@id/tv_toast"
					android:padding="10.0dip" 
					android:paddingLeft="10.0dip" 
					android:paddingRight="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<android.support.v7.widget.CardView 
				xmlns:android="http://schemas.android.com/apk/res/android" 
				xmlns:cardview="http://schemas.android.com/apk/res-auto" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginRight="5.0dip" 
				cardview:cardBackgroundColor="@android:color/transparent"
				cardview:cardCornerRadius="5.0dip" 
				cardview:cardElevation="0.0dip">
				<RelativeLayout 
					android:theme="@style/WatchDark" 
					android:gravity="center"
					android:id="@+id/backep"
					android:background="@drawable/cornor_toast"
					android:layout_width="45.0dip" 
					android:layout_height="45.0dip"
					android:foreground="?android:selectableItemBackground">
					<ImageView 
						android:id="@+id/image_back"
						android:layout_width="30.0dip"
						android:layout_height="30.0dip" 
						android:src="@drawable/left_icon_black" 
						android:layout_centerInParent="true"
						cardview:tint="@android:color/white" />
				</RelativeLayout>
			</android.support.v7.widget.CardView>


			<android.support.v7.widget.CardView 
				xmlns:android="http://schemas.android.com/apk/res/android" 
				xmlns:cardview="http://schemas.android.com/apk/res-auto"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				cardview:cardBackgroundColor="@android:color/transparent"
				cardview:cardCornerRadius="5.0dip"
				cardview:cardElevation="0.0dip">
				<RelativeLayout
					android:theme="@style/WatchDark" 
					android:gravity="center" 
					android:id="@+id/nextep"
					android:background="@drawable/cornor_toast"
					android:layout_width="45.0dip"
					android:layout_height="45.0dip"
					android:foreground="?android:selectableItemBackground">
					<ImageView
						android:id="@+id/image_next"
						android:layout_width="30.0dip" 
						android:layout_height="30.0dip" 
						android:src="@drawable/left_icon_black"
						android:layout_centerInParent="true"
						android:rotationY="180.0" 
						cardview:tint="@android:color/white" />
				</RelativeLayout>
			</android.support.v7.widget.CardView>

		</LinearLayout>
	</LinearLayout>

</LinearLayout>

