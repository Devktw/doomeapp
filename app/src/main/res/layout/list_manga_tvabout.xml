<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
<LinearLayout android:orientation="vertical"
	android:gravity="center"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<RelativeLayout android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	<RelativeLayout android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<android.support.v7.widget.CardView
			xmlns:cardview="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			cardview:cardUseCompatPadding="true"	
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			cardview:cardCornerRadius="7dp"
			android:orientation="vertical">
			<ImageView android:id="@+id/image_profile"
			android:layout_width="match_parent"
			android:scaleType="fitXY"
			android:layout_height="200dp"/>
		</android.support.v7.widget.CardView>
	</RelativeLayout>
		<RelativeLayout android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<android.support.v7.widget.CardView
			xmlns:cardview="http://schemas.android.com/apk/res-auto"
			android:layout_width="130dp"
			android:layout_height="170dp"
			android:layout_marginTop="85dp"
			cardview:cardUseCompatPadding="true"	
			cardview:cardCornerRadius="7dp"
			android:orientation="vertical">
		<ImageView android:id="@+id/image_manga"
			android:gravity="center"
			android:scaleType="fitXY"
			android:layout_width="130dp"
			android:layout_height="170dp"/>
		</android.support.v7.widget.CardView>
	</RelativeLayout>
	</RelativeLayout>
	<RelativeLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	<TextView 
		android:layout_marginTop="10dp"
		android:id="@+id/name_manga"
		android:layout_width="wrap_content"
		android:textColor="?android:attr/textColorPrimary"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:text="_______"
		android:textSize="20sp" />
	</RelativeLayout>
	<LinearLayout android:layout_marginLeft="10dp"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<FrameLayout android:layout_marginTop="10dp"
			android:layout_marginRight="15dp"
			android:layout_width="100dp"
			android:gravity="center"
			android:layout_height="35dp"
			android:background="@drawable/follow_bottom_bg">
			<LinearLayout android:background="?attr/selectableItemBackground"
				android:clickable="true"
				android:id="@+id/rebtn"
				android:gravity="center"
				android:focusable="true"
				android:layout_width="100dp"
				android:layout_height="40dp">
				<TextView android:id="@+id/textre"
					android:text="+ ติดตาม"
					android:gravity="center"
					android:layout_marginBottom="2dp"
					android:textSize="14sp"
					android:textColor="@android:color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</FrameLayout>
		<FrameLayout android:layout_marginTop="10dp"
			android:layout_width="100dp"
			android:gravity="center"
			android:layout_marginRight="15dp"
			android:layout_height="35dp"
			android:background="@drawable/save_bottom_bg">
			<LinearLayout android:background="?attr/selectableItemBackground"
				android:clickable="true"
				android:id="@+id/rebtn"
				android:gravity="center"
				android:focusable="true"
				android:layout_width="100dp"
				android:layout_height="40dp">
				<TextView android:id="@+id/textre"
					android:text="+ รายการโปรด"
					android:gravity="center"
					android:layout_marginBottom="2dp"
					android:textSize="14sp"
					android:textColor="@android:color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</FrameLayout>
		<FrameLayout android:layout_marginTop="10dp"
			android:layout_width="100dp"
			android:gravity="center"
			android:layout_height="35dp"
			android:background="@drawable/error_bottom_bg">
			<LinearLayout android:background="?attr/selectableItemBackground"
				android:clickable="true"
				android:id="@+id/rebtn"
				android:gravity="center"
				android:focusable="true"
				android:layout_width="100dp"
				android:layout_height="40dp">
				<TextView android:id="@+id/textre"
					android:text="แจ้งภาพเสีย"
					android:gravity="center"
					android:layout_marginBottom="2dp"
					android:textSize="14sp"
					android:textColor="@android:color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</FrameLayout>
	</LinearLayout>
	<View android:layout_marginTop="10dp"
		android:background="@color/colorGray"
		android:layout_marginRight="20dp"
		android:layout_marginLeft="20dp"
		android:layout_width="match_parent" 
		android:layout_height="1sp"/> 
	<TextView android:layout_marginLeft="10dp"
		android:layout_width="match_parent"
		android:textColor="?android:attr/textColorPrimary"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:textStyle="bold"
		android:layout_weight="1"
		android:text="รายละเอียด"
		android:textSize="18sp" />
    <LinearLayout android:layout_marginLeft="15dp"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
			android:textColor="?android:attr/textColorPrimary"
            android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
            android:background="@drawable/cornor_formation"
            android:text="ปี"
            android:textSize="16sp" />
		<TextView
            android:id="@+id/formation"
			android:textColor="?android:attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
            android:background="@drawable/cornor_formation"
            android:text="แนว"
            android:textSize="16sp" />
		<TextView
            android:id="@+id/seson"
			android:textColor="?android:attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:background="@drawable/cornor_formation"
            android:text="ซีซั่น"

            android:textSize="16sp" />
		<TextView
            android:id="@+id/valus"
			android:textColor="?android:attr/textColorPrimary"
            android:layout_width="wrap_content"
			android:background="@drawable/cornor_formation"
            android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
            android:text="จำนวนตอน"
            android:textSize="16sp" />
		<TextView
            android:id="@+id/sub_use"
			android:textColor="?android:attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:background="@drawable/cornor_formation"
            android:text="ผู้แปล"
            android:textSize="16sp" />
	</LinearLayout>
	<TextView android:layout_marginLeft="10dp"
		android:layout_width="match_parent"
		android:textColor="?android:attr/textColorPrimary"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:textStyle="bold"
		android:layout_weight="1"
		android:text="เนื้อเรื่องย่อ"
		android:textSize="18sp" />
	<TextView android:layout_marginLeft="20dp"
		android:layout_marginRight="15dp"
		android:id="@+id/tv_ministory"
		android:layout_width="match_parent"
		android:textColor="?android:attr/textColorPrimary"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_weight="1"
		android:text="-"
		android:textSize="16sp" />
</LinearLayout>
</RelativeLayout>
