<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
	<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
		android:layout_height="140dp"
		app:cardBackgroundColor="@android:color/transparent"

		app:cardElevation="0dp"
		cardview:cardCornerRadius="7dp">
		<LinearLayout android:orientation="vertical"
			android:layout_width="150dp"
			android:foreground="?android:attr/selectableItemBackground"
			android:layout_height="140dp">
			<android.support.v7.widget.CardView
				xmlns:cardview="http://schemas.android.com/apk/res-auto"
				android:layout_width="150dp"
				android:layout_height="90dp"
				cardview:cardUseCompatPadding="true"	
				cardview:elevation="0dp"
				cardview:cardCornerRadius="5dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/ep_image"
					android:layout_width="150dp"
					android:layout_height="90dp"
					android:scaleType="centerCrop"/>
				<RelativeLayout android:layout_marginLeft="120dp"
					android:layout_width="wrap_content"
					android:id="@+id/premium"
					android:layout_height="20dp">
					<ImageView 
						android:background="@drawable/main_parkpremium"
						android:layout_width="50dp"
						android:gravity="center"
						android:layout_height="20dp"/>
					<ImageView android:tint="#FFFFFF"
						android:src="@drawable/diamond"
						android:layout_width="15dp"
						android:layout_centerHorizontal="true"
						android:layout_height="match_parent"/>
				</RelativeLayout> 
			</android.support.v7.widget.CardView>
			<LinearLayout android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/ep_name"
					android:layout_width="150dp"
					android:paddingRight="10dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="-"
					android:ellipsize="end" 
					android:maxLines="2"
					android:textSize="14sp" />
			</LinearLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>

